[Unit]
Description=Snort NIDS Service
Documentation=man:systemd-sysv-generator(8)
SourcePath=/etc/init.d/snort.conf

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
ExecStart=/bin/bash /etc/init.d/snort.conf start
ExecStop=/bin/bash /etc/init.d/snort.conf stop


[Install]
WantedBy=multi-user.target